generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model User {
  id       String  @id @default(cuid())
  name     String
  email    String  @unique
  password String
  isAdmin  Boolean @default(false)
  orders   Order[]
}

model Vehicle {
  id    String          @id @default(cuid())
  name  String
  image String?
  merk  MerkEnum
  color ColorEnum
  type  VehicleTypeEnum
  price Float
  Order Order[]
}

model Order {
  id              String      @id @default(cuid())
  renter          User        @relation(fields: [renterId], references: [id])
  renterId        String
  rentedVehicle   Vehicle     @relation(fields: [rentedVehicleId], references: [id])
  rentedVehicleId String
  startDate       DateTime
  endDate         DateTime
  totalRentPrice  Float
  paymentProof    String?
  status          OrderStatus @default(PENDING_PAYMENT)
}

enum OrderStatus {
  PENDING_PAYMENT
  PAID
  RENTER_RECEIVED
  RENTER_RETURNED
}

enum MerkEnum {
  TOYOTA
  HONDA
  YAMAHA
  BMW
  MERCEDES_BENZ
  AUDI
  FORD
  CHEVROLET
  HYUNDAI
  NISSAN
  VOLKSWAGEN
  LEXUS
  SUBARU
  MAZDA
  KIA
  SUZUKI
  JEEP
  LAND_ROVER
  VOLVO
  TESLA
  PORSCHE
}

enum ColorEnum {
  BLACK
  WHITE
  SILVER
  GREY
  BLUE
  RED
  GREEN
  YELLOW
  ORANGE
  BROWN
}

enum VehicleTypeEnum {
  SEDAN
  SUV
  HATCHBACK
  COUPE
  CONVERTIBLE
  MINIVAN
  PICKUP_TRUCK
  VAN
  MOTORCYCLE
}
